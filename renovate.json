{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:daily",
    "docker:pinDigests",
    "docker:enableMajor",
    ":automergePr",
    ":automergeMinor",
    "group:allNonMajor"
  ],
  "dependencyDashboard": true,
  "ignoreTests": false,
  "docker-compose": {
    "fileMatch": ["(^|/)(?:docker-)?compose[^/]*\\.ya?ml(?:.j2)?$"]
  }
}
