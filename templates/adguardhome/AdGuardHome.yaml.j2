http:
  address: "0.0.0.0:{{ adguardhome.dashboard_port }}"
users:
  - name: "{{ adguardhome_user }}"
    password: "{{ adguardhome_pass }}"
language: en
theme: dark
dns:
  bind_hosts:
    - 0.0.0.0
  port: 53
  anonymize_client_ip: true
  upstream_dns:
    # Using 3 DNS servers for redundancy and speed (parallel queries).
    - https://cloudflare-dns.com/dns-query
    - quic://unfiltered.adguard-dns.com
    - quic://dns.nextdns.io
  bootstrap_dns:
    # AdGuard Unfiltered DNS
    - 94.140.14.140
    - 94.140.14.141
    - 2a10:50c0::1:ff
    - 2a10:50c0::2:ff
  fallback_dns:
    # Cloudflare DNS
    - 1.1.1.1
    - 1.0.0.1
    - 2606:4700:4700::1111
    - 2606:4700:4700::1001
  upstream_mode: parallel
  cache_optimistic: true
  enable_dnssec: true
filters:
  - enabled: true
    url: https://adguardteam.github.io/HostlistsRegistry/assets/filter_1.txt
    name: AdGuard DNS filter
    id: 1
  - enabled: true
    url: https://big.oisd.nl/
    name: oisd big
    id: 2
filtering:
  rewrites:
    # Redirect the internal hostname to the TrueNAS node.
    # External hostname is handled by Cloudflare DNS.
    - domain: "*.{{ internal_hostname }}"
      answer: "{{ truenas_ip }}"
  filters_update_interval: 1 # 1 hour
schema_version: 28
