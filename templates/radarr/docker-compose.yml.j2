---
version: "3"

networks:
  "{{ docker_network }}":
    external: true

services:
  radarr:
    container_name: radarr
    image: lscr.io/linuxserver/radarr:5.17.2@sha256:dce7e81d08da67cf44437c7213d19faeef1323aa839712fbb53d1253ef94f93f
    restart: unless-stopped
    hostname: "{{ radarr.hostname }}"
    networks:
      - "{{ docker_network }}"
    environment:
      PUID: "1000"
      PGID: "1000"
      TZ: "{{ docker_tz }}"
    volumes:
      - "{{ radarr.datadir }}/config:/config"
      - "{{ radarr.mediadir }}:/media"
    labels:
      traefik.enable: "true"
      traefik.http.routers.radarr.entrypoints: "https"
      traefik.http.routers.radarr.rule: "Host(`{{ radarr.hostname }}`)"
      traefik.http.services.radarr.loadbalancer.server.port: "7878"
