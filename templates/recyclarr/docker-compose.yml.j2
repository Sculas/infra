# {{ ansible_managed }}
---
version: "3"

networks:
  {{ docker_network }}:
    external: true

services:
  recyclarr:
    container_name: recyclarr
    image: recyclarr/recyclarr:7.2.3@sha256:77a3c0156ec0ddef256998b246d4d80a2f1b96ee4a3a1a21bbc8459bfd0c9ad9
    restart: unless-stopped
    hostname: "{{ recyclarr.hostname }}"
    user: 1000:1000
    networks:
      - {{ docker_network }}
    environment:
      TZ: "{{ docker_tz }}"
    volumes:
      - "{{ recyclarr.datadir }}/config:/config"
