---
version: "3"

networks:
  "{{ docker_network }}":
    external: true

services:
  sonarr:
    container_name: sonarr
    image: lscr.io/linuxserver/sonarr:4.0.11@sha256:ca4ad72f07e532d1d414435eb43193d1dc407255e46c21c2694653ca8af4fd81
    restart: unless-stopped
    hostname: "{{ sonarr.hostname }}"
    networks:
      - "{{ docker_network }}"
    environment:
      PUID: "1000"
      PGID: "1000"
      TZ: "{{ docker_tz }}"
    volumes:
      - "{{ sonarr.datadir }}/config:/config"
      - "{{ sonarr.mediadir }}:/media"
    labels:
      traefik.enable: "true"
      traefik.http.routers.sonarr.entrypoints: "https"
      traefik.http.routers.sonarr.rule: "Host(`{{ sonarr.hostname }}`)"
      traefik.http.services.sonarr.loadbalancer.server.port: "8989"
