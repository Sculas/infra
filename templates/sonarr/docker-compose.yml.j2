# {{ ansible_managed }}
---
version: "3"

networks:
  {{ docker_network }}:
    external: true

services:
  sonarr:
    container_name: sonarr
    image: lscr.io/linuxserver/sonarr:4.0.8-develop@sha256:1e3c357e6aa8f4a966c896fa926e0e46a874df4af845b2e1ddbc533f28105134
    restart: unless-stopped
    hostname: "{{ sonarr.hostname }}"
    networks:
      - {{ docker_network }}
    environment:
      PUID: "1000"
      PGID: "1000"
      TZ: "{{ docker_tz }}"
    volumes:
      - "{{ sonarr.datadir }}/config:/config"
      - "{{ sonarr.mediadir }}:/media"
    labels:
      traefik.enable: "true"
      traefik.http.routers.sonarr.entrypoints: "https"
      traefik.http.routers.sonarr.rule: "Host(`{{ sonarr.hostname }}`)"
      traefik.http.services.sonarr.loadbalancer.server.port: "8989"
