---
version: "3"

networks:
  "{{ docker_network }}":
    external: true

services:
  sonarr:
    container_name: sonarr
    image: lscr.io/linuxserver/sonarr:4.0.13@sha256:b666479159c0ffc17d5c2281737c9a88d78afcaa0aa52cb441b46336f6feba31
    restart: unless-stopped
    hostname: "{{ sonarr.hostname }}"
    networks:
      - "{{ docker_network }}"
    environment:
      PUID: "1000"
      PGID: "1000"
      TZ: "{{ docker_tz }}"
    volumes:
      - "{{ sonarr.datadir }}/config:/config"
      - "{{ sonarr.mediadir }}:/media"
    labels:
      traefik.enable: "true"
      traefik.http.routers.sonarr.entrypoints: "https"
      traefik.http.routers.sonarr.rule: "Host(`{{ sonarr.hostname }}`)"
      traefik.http.services.sonarr.loadbalancer.server.port: "8989"
