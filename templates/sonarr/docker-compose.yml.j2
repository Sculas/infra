---
version: "3"

networks:
  "{{ docker_network }}":
    external: true

services:
  sonarr:
    container_name: sonarr
    image: lscr.io/linuxserver/sonarr:4.0.12@sha256:f0a375411bebbd7fe5657019b355a1457821dee9720e54853f5ada24fa0f696b
    restart: unless-stopped
    hostname: "{{ sonarr.hostname }}"
    networks:
      - "{{ docker_network }}"
    environment:
      PUID: "1000"
      PGID: "1000"
      TZ: "{{ docker_tz }}"
    volumes:
      - "{{ sonarr.datadir }}/config:/config"
      - "{{ sonarr.mediadir }}:/media"
    labels:
      traefik.enable: "true"
      traefik.http.routers.sonarr.entrypoints: "https"
      traefik.http.routers.sonarr.rule: "Host(`{{ sonarr.hostname }}`)"
      traefik.http.services.sonarr.loadbalancer.server.port: "8989"
